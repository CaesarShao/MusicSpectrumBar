<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.caesar.musicspectrumbarlibrary.MusicSpectrumBar
                android:id="@+id/mb_type1"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="即时进度 : 0"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_touch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手指放开进度 : 0"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btn_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置进度为25" />

                <Button
                    android:id="@+id/btn_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置进度为60" />

            </LinearLayout>

        </LinearLayout>


        <com.caesar.musicspectrumbarlibrary.MusicSpectrumBar
            android:id="@+id/mb_type2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:colorGradient="1"
            app:gapMultiple="9"
            app:poseType="1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.caesar.musicspectrumbarlibrary.MusicSpectrumBar
                android:id="@+id/mb_type3"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:colorGradient="1"
                app:poseType="2"
                app:unSelectColor="@color/colorAccent" />


            <com.caesar.musicspectrumbarlibrary.MusicSpectrumBar
                android:id="@+id/mb_type4"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:poseType="3"
                app:unSelectColor="@color/colorAccent" />
        </LinearLayout>


        <com.caesar.musicspectrumbarlibrary.MusicSpectrumBar
            android:id="@+id/mb_type5"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            app:poseType="3" />

        <com.caesar.musicspectrumbarlibrary.MusicSpectrumBar
            android:id="@+id/mb_type6"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            app:poseType="3" />

        <com.caesar.musicspectrumbarlibrary.MusicSpectrumBar
            android:id="@+id/mb_type7"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            app:SpectMultiple="0.2"
            app:poseType="3" />

        <com.caesar.musicspectrumbarlibrary.MusicSpectrumBar
            android:id="@+id/mb_type8"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            app:poseType="3" />

        <com.caesar.musicspectrumbarlibrary.MusicSpectrumBar
            android:id="@+id/mb_type9"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            app:poseType="0" />

    </LinearLayout>
</ScrollView>